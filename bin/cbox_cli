#!/bin/bash
#
# Configured script to set Ethernet and WiFi configuration
#

CBOX_ETHERNET="/usr/local/bin/cbox_ethernet"
CBOX_WIFI="/usr/local/bin/cbox_wifi"

prompt="Select function options: "
options=("Ethernet management"
	"Wifi management"
	"Restart cbox"
	"Power-off cbox"
)

echo ""
PS3="$prompt "
select opt in "${options[@]}" "Quit"; do
	case "$REPLY" in
	1)
		echo "Launch ethernet management process: "
		echo ""
		$CBOX_ETHERNET
		echo ""
		;;
	2)
		echo "Launch wifi management: "
		echo ""
		$CBOX_WIFI
		echo ""
		;;
	3)
		echo "Restart cbox: "
		echo ""
		shutdown -r now
		echo ""
		;;
	4)
		echo "Power-off cbox: "
		echo ""
		echo "Remove power after onboard gree LED stop blinking!"
		shutdown -h now
		echo ""
		;;
	$((${#options[@]} + 1)))
		echo "Goodbye!"
		break
		;;
	*)
		echo "Invalid option. Try another one."
		continue
		;;
	esac
done
