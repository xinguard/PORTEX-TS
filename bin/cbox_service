#!/bin/bash

#
# Configured script to set Ethernet and WiFi configuration
#
REV=20190221

prompt="Select function options: "
options=("TACACS+ server management" \
	"LOG server management" \
	"Connection ACL management" \
	"Local user management" \
	)

echo ""
echo ""
PS3="$prompt "
select opt in "${options[@]}" "Quit"; do 

case "$REPLY" in

1) echo "Launch TACACS+ server management: "
	echo ""
	/usr/local/bin/cbox_tacserver
	echo ""
	;;

2) echo "Launch LOG server management: "
	echo ""
	/usr/local/bin/cbox_logserver
	echo ""
	;;

3) echo "Connection ACL management: "
	echo ""
	/usr/local/bin/cbox_acl
	echo ""
	;;

4) echo "Local user management: "
	echo ""
	/usr/local/bin/cbox_user
	echo ""
	;;

$(( ${#options[@]}+1 )) ) echo "Goodbye!"; break;;

*) echo "Invalid option. Try another one.";continue;;

esac

done

